{
  "swagger": "2.0",
  "info": {
    "version": "0.0.1",
    "title": "Cloud Storage",
    "description": "Cloud Storage app"
  },
  "host": "localhost:5000/api/v1",
  "basePath": "/",
  "schemes": ["http", "https"],
  "paths": {
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login from existing account",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "description": "User's credentials",
            "schema": {
              "$ref": "#/definitions/Auth"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully logged in",
            "schema": {
              "$ref": "#/definitions/AuthResponse"
            }
          },
          "401": {
            "description": "Wrong credentials",
            "schema": {
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/auth/registration": {
      "post": {
        "tags": ["Auth"],
        "summary": "Registrate new account",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "New user's credentials",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Auth"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully created account",
            "schema": {
              "$ref": "#/definitions/AuthResponse"
            }
          },
          "400": {
            "description": "Invalid data",
            "schema": {
              "properties": {
                "message": {
                  "type": "string"
                },
                "error": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/ValidationError"
                  }
                }
              }
            }
          }
        }
      }
    },

    "/auth/refresh": {
      "get": {
        "tags": ["Auth"],
        "summary": "Get new token couple from old refresh token",
        "parameters": [
          {
            "name": "cookie",
            "in": "header",
            "description": "refresh token",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully refreshed",
            "schema": {
              "$ref": "#/definitions/AuthResponse"
            }
          },
          "401": {
            "description": "Wrong refresh token",
            "schema": {
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },

    "/auth/email": {
      "put": {
        "tags": ["Auth"],
        "summary": "Set email and get conformational letter",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "bearer token",
            "type": "string",
            "required": true
          },
          {
            "in": "body",
            "name": "body",
            "description": "New user's credentials",
            "required": true,
            "schema": {
              "properties": {
                "email": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully added email",
            "schema": {
              "$ref": "#/definitions/AuthResponse"
            }
          },
          "400": {
            "description": "Invalid email",
            "schema": {
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/ban/:login": {
      "put": {
        "tags": ["Mod"],
        "summary": "Ban user",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "bearer token",
            "type": "string",
            "required": true
          },
          {
            "in": "body",
            "name": "body",
            "description": "Ban reason",
            "required": true,
            "schema": {
              "properties": {
                "reason": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully banned",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400": {
            "description": "Invalid ban reason",
            "schema": {
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["User"],
        "summary": "Get all users",
        "parameters": [
          {
            "in": "path",
            "name": "page",
            "description": "Page number",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "path",
            "name": "limit",
            "description": "Count elements shown",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Users",
            "schema": {
              "$ref": "#/definitions/PaginatedUsers"
            }
          }
        }
      },
      "put": {
        "tags": ["User"],
        "summary": "Update user",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "bearer token",
            "type": "string",
            "required": true
          },
          {
            "in": "body",
            "name": "body",
            "description": "New data",
            "required": true,
            "schema": {
              "properties": {
                "name": {
                  "type": "string"
                },
                "country": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully updated",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400": {
            "description": "Invalid data",
            "schema": {
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      },

      "delete": {
        "tags": ["User"],
        "summary": "Delete user",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "bearer token",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully deleted",
            "schema": {
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },

    "users/:login": {
      "get": {
        "tags": ["User"],
        "summary": "Get user by login",
        "responses": {
          "200": {
            "description": "User",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/users/avatar": {
      "put": {
        "tags": ["User"],
        "summary": "Update avatar",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "bearer token",
            "type": "string",
            "required": true
          },
          {
            "in": "formData",
            "name": "avatar",
            "type": "file",
            "required": true,
            "description": "New avatar"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully updated",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400": {
            "description": "Invalid image",
            "schema": {
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "login": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "avatar": {
          "type": "string"
        },
        "registrationDate": {
          "type": "string"
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "isBanned": {
          "type": "boolean"
        }
      }
    },
    "PaginatedUsers": {
      "type": "object",
      "properties": {
        "page": {
          "type": "number"
        },
        "limit": {
          "type": "number"
        },
        "maxCount": {
          "type": "number"
        },
        "response": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/User"
          }
        }
      }
    },
    "AuthResponse": {
      "type": "object",
      "properties": {
        "accessToken": {
          "type": "string"
        },
        "refreshToken": {
          "type": "string"
        },
        "user": {
          "$ref": "#/definitions/User"
        }
      }
    },
    "ValidationError": {
      "type": "object",
      "properties": {
        "value": {
          "type": "number"
        },
        "msg": {
          "type": "string"
        },
        "param": {
          "type": "string"
        },
        "location": {
          "type": "string"
        }
      }
    },
    "Auth": {
      "type": "object",
      "properties": {
        "login": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    }
  }
}
