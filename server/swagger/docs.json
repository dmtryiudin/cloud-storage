{
  "swagger": "2.0",
  "info": {
    "version": "0.0.1",
    "title": "Cloud Storage",
    "description": "Cloud Storage app"
  },
  "host": "localhost:5000/api/v1",
  "basePath": "/",
  "schemes": ["http", "https"],
  "paths": {
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login from existing account",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "description": "User's credentials",
            "schema": {
              "$ref": "#/definitions/Auth"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully logged in",
            "schema": {
              "$ref": "#/definitions/AuthResponse"
            }
          },
          "401": {
            "description": "Wrong credentials",
            "schema": {
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "schema": {
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/auth/registration": {
      "post": {
        "tags": ["Auth"],
        "summary": "Registrate new account",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "New user's credentials",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Auth"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully created account",
            "schema": {
              "$ref": "#/definitions/AuthResponse"
            }
          },
          "400": {
            "description": "Invalid data",
            "schema": {
              "properties": {
                "message": {
                  "type": "string"
                },
                "error": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/ValidationError"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "schema": {
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },

    "/auth/refresh": {
      "get": {
        "tags": ["Auth"],
        "summary": "Get new token couple from old refresh token",
        "parameters": [
          {
            "name": "cookie",
            "in": "header",
            "description": "refresh token",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully refreshed",
            "schema": {
              "$ref": "#/definitions/AuthResponse"
            }
          },
          "401": {
            "description": "Wrong refresh token",
            "schema": {
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "schema": {
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },

    "/auth/email": {
      "put": {
        "tags": ["Auth"],
        "summary": "Set email and get conformational letter",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "bearer token",
            "type": "string",
            "required": true
          },
          {
            "in": "body",
            "name": "body",
            "description": "New user's credentials",
            "required": true,
            "schema": {
              "properties": {
                "email": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully added email",
            "schema": {
              "$ref": "#/definitions/AuthResponse"
            }
          },
          "400": {
            "description": "Invalid email",
            "schema": {
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/auth/activate/:link": {
      "get": {
        "tags": ["Auth"],
        "summary": "Activate your email",
        "responses": {
          "401": {
            "description": "Wrong activation link",
            "schema": {
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "login": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "avatar": {
          "type": "string"
        },
        "registrationDate": {
          "type": "string"
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "isBanned": {
          "type": "boolean"
        }
      }
    },
    "AuthResponse": {
      "type": "object",
      "properties": {
        "accessToken": {
          "type": "string"
        },
        "refreshToken": {
          "type": "string"
        },
        "user": {
          "$ref": "#/definitions/User"
        }
      }
    },
    "ValidationError": {
      "type": "object",
      "properties": {
        "value": {
          "type": "number"
        },
        "msg": {
          "type": "string"
        },
        "param": {
          "type": "string"
        },
        "location": {
          "type": "string"
        }
      }
    },
    "Auth": {
      "type": "object",
      "properties": {
        "login": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    }
  }
}
